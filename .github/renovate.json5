{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "renovate/",
  "labels": ["renovate"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "addLabels": ["major"],
    },
    {
      "matchUpdateTypes": ["minor","patch"],
      "addLabels": ["automerge"],
      "automerge": true,
    },
  ],
  "prBodyTemplate": "{{{table}}}{{{notes}}}{{{changelogs}}}",
  "rebaseWhen": "behind-base-branch",
  "regexManagers": [
    {
      // https://github.com/renovatebot/renovate/discussions/14366
      "fileMatch": [ "^docs/src/part-.*\\.md$" ],
      "matchStrings": [ "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)(?: lookupName=(?<lookupName>.+?))?(?: extractVersion=(?<extractVersion>.+?))?\\s*.*?_VERSION=\"?(?<currentValue>.+?)\"?\\s" ],
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{else}}^v?(?<version>.+)${{/if}}"
    },
    {
      "fileMatch": [ "^docs/src/part-.*\\.md$" ],
      "matchStrings": [ "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)(?: lookupName=(?<lookupName>.+?))?(?: extractVersion=(?<extractVersion>.+?))?\\s*.*?version: \"?(?<currentValue>.+?)\"?\\s" ],
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{else}}^v?(?<version>.+)${{/if}}"
    },
  ],
  "separateMinorPatch": true,
}
