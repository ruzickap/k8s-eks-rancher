{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "renovate/",
  "labels": ["renovate", "renovate/{{replace '.*/' '' depName}}", "renovate/{{updateType}}"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automergeType": "branch",
      "automerge": true,
    },

    {
      "description": "Ignore frequent renovate updates",
      "matchPackageNames": ["renovatebot/github-action"],
      "matchUpdateTypes": ["patch"],
      "enabled": false
    },

    {
      "matchPackageNames": ["renovatebot/github-action"],
      "matchUpdateTypes": ["minor"],
      "automergeType": "branch",
      "automerge": true,
      "ignoreTests": true,
      "schedule": ["on Sunday"],
    },

    {
      "description": "autoMerge eksctl",
      "matchPackageNames": ["weaveworks/eksctl"],
      "matchUpdateTypes": ["minor", "patch"],
      "ignoreTests": true,
      "automergeType": "branch",
      "automerge": true,
    },

    {
      "description": "autoMerge only patch releases for karpenter due to eksctl support",
      "matchPackageNames": ["aws/karpenter"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
  ],
  "prBodyTemplate": "{{{table}}}{{{notes}}}{{{changelogs}}}",
  "rebaseWhen": "behind-base-branch",
  "regexManagers": [
    {
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$",
        "^docs/src/part-.*\\.md$",
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.+?) depName=(?<depName>.+?)( versioning=(?<versioning>.+?))?( extractVersion=(?<extractVersion>.+?))?( registryUrl=(?<registryUrl>.+?))?\\s.*[=:]\\s*\"?(?<currentValue>.+?)\"?\\s",
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}",
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{else}}^v?(?<version>.+)${{/if}}",
    },
  ],
  "separateMinorPatch": true,
}
